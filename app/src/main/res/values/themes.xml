<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AplicacionSophos" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/dark_purple_700</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.AplicacionSophos.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AplicacionSophos.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Toolbartheme" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">
        <item name="backgroundColor">@color/white</item>
        <item name="colorControlNormal">@color/purple_200</item>
        <item name="titleTextColor">@color/purple_200</item>
    </style>
</resources>